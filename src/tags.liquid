---
pagination:
  data: collections
  size: 1
  alias: tag
  filter: blog
permalink: "tags/{{ tag | slugify }}/"
layout: main.liquid
---

<h1>Tagged “{{ tag }}”</h1>

<ul>
{% assign taglist = collections[ tag ] %}
{% for post in taglist %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ul>
